@model ClienteModel
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Crear Cliente
    </div>
    <div class="card-body">
       
        <form>
            <div class="mb-3">
                <label  class="form-label">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control"  >
                
            </div>
            <div class="mb-3">
                <label asp-for="Telefono" class="form-label">Telefono</label>
                <input type="text" class="form-control" >
            </div> 
            <div class="mb-3">
                <label asp-for="Correo" class="form-label">Correo</label>
                <input type="text" class="form-control">
            </div>
            
            <button type="submit" class="btn btn-primary">Guardar</button> 
            <a>Volver a la lista</a>
        </form>

    </div>
</div>

